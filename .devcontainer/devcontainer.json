{
  "name": "Go + Minikube Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/go",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "usernamehw.errorlens",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "Gruntfuggly.todo-tree"
      ]
    }
  },

  "postCreateCommand": "find . -name 'go.mod' -execdir go mod download \\;",
  "postStartCommand": "chmod +x .devcontainer/kubernetes_init.sh && .devcontainer/kubernetes_init.sh",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteUser": "vscode"
}
